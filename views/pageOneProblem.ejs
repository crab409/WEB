<!DOCTYPE html>
<html>
    <head>
        <title></title>
        <meta charset="utf-8">
        <link rel="stylesheet" href="/css/baseCss.css">
        <link rel="stylesheet" href="/css/problemSolve.css">
    </head>
    <body>
        <%- include('blockHeader.ejs') %>


        <div id="base-main">
            <div class="side-bar">
                this is side bar
            </div>
            <div class="main">
                <div class="jumbo"><h2>문제</h2></div>
                <div class="container">
                    <div class="content-header"><h3>
                        <%= JSON.stringify(dataSet.title) %>
                        <%= JSON.stringify(dataSet.cleareCount) %>
                    </h3></div>
                    <div class="content">
                        <%- dataSet.content.replace(/\n/g, '<br>') %>
                    </div>
                    <div class="explain">
                        <h4>입력 설명</h4>
                        <%= JSON.stringify(dataSet.inputExplain) %>
                        <h4>출력 설명</h4>
                        <%= JSON.stringify(dataSet.outputExplain) %>
                    </div>
                    <div class="sample">
                        <h4>입력 예제</h4>
                        <%= JSON.stringify(dataSet.sampleInput1) %>
                        <h4>출력 예제</h4>
                        <%= JSON.stringify(dataSet.sampleOutput1) %>
                    </div>

                    <form class="form-box" action="/problemSumit" method="POST">
                        <h4>문제 답란</h4>
                        
                        <input id="code" name="code"></textarea>
                        <input name="id" value="<%= userData._id %>" style="display: none;">
                        <input name="problemId" value="<%= dataSet._id %>" >
                        <button type="submit">전송</button>
                    </form>
                </div>
            </div>
        </div>


        <%- include('blockFooter.ejs') %>
    </body>
</html>